extend layout

block content
  header.text-center
    h1.text-sky-400= 'Message Board'
    p= 'speak your mind freely'
  main
    .button-container
      a(href=`/new`): button.compose= "got something to say?"
    each message in messages 
      section.message-card 
        h2= message.title
        p.description= message.text
        footer 
          p.username= message.username
          p.date= message.date